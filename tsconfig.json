{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "rootDir": "lib",
    "baseUrl": ".",
    "outDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "lib": ["ESNext"],
    "types": ["bun-types"]
  },
  "include": ["lib"],
  "exclude": ["src"]
}
