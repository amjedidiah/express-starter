{
  "compilerOptions": {
    "target": "es5",
    "module": "NodeNext",
    "rootDir": "lib",
    "baseUrl": ".",
    "outDir": "src",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["lib"],
  "exclude": ["src"]
}
